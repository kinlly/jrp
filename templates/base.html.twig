<!DOCTYPE html>
<html lang="en">

	{% block meta_tags %}
		<head>
			<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<title>{{json_metas._001}}</title>
			<meta name="description" content="Get the JapanRail Pass for your future destination with just one click. Best price guarantee">
			<link rel="icon" type="image/png" href="{{ asset('images/tab.png') }}">
			<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
			<link rel="stylesheet" href="{{asset('css/font-awesome-4.7.0/css/font-awesome.min.css')}}">
			<link rel="stylesheet" href="{{asset('css/main.css')}}">
			{% if custom_css == "application"%}
				<link rel="stylesheet" href="{{asset('css/application.css')}}">
				<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
			{% else %}
				<link rel="stylesheet" href="{{asset('css/home.css')}}">
			{% endif %}
			<script async src="https://www.googletagmanager.com/gtag/js?id=AW-717471204"></script>
			<script>window.dataLayer = window.dataLayer || [];function gtag() {dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'AW-717471204');</script>
			<meta name="robots" content="{{json_metas._002}}"/>
		</head>
	{% endblock %}

	<body>
		<div class="app">

			{% block navbar %}
				<div class="app__header">
					<div class="header__container">
						<div class="header__left">
							<img src="{{ asset('images/logo.png') }}" alt="logo">
						</div>

						
						<div class="header__right">
							{% if hide_header_button is not defined %}
								<a href="application">{{json_text._008}}</a>
							{% endif %}
						</div> 
					</div>
				</div>
			{% endblock %}

			{% block body %}{% endblock %}

			{% block footer %}
				{% if hide_footer is not defined %}
				<div class="app__footer">
					<div class="footer__container">
						<div class="footer__left">
							<p><i class="fa fa-chevron-right" aria-hidden="true"></i> Contact us</p> 
							<p><i class="fa fa-chevron-right" aria-hidden="true"></i> Terms of Use</p> 
							<p><i class="fa fa-chevron-right" aria-hidden="true"></i> Privacy Policy</p> 
						</div>
						<div class="footer__center">
							<p>Payment Method</p>
							<div class="imgOptionFooter"><img src="{{asset('images/image00.png')}}"/></div>
							<div class="imgOptionFooter"><img src="{{asset('images/image01.png')}}"/></div>
							<div class="imgOptionFooter"><img src="{{asset('images/image05.png')}}"/></div>
							<div class="imgOptionFooter"><img src="{{asset('images/image06.png')}}"/></div>
							<div class="imgOptionFooter"><img src="{{asset('images/image04.png')}}"/></div>
							<div class="imgOptionFooter"><img src="{{asset('images/image03.png')}}"/></div>
						</div>
						<div class="footer__right">
							<p>Secure</p>
							<div class="imgSSLFooter"><img src="{{asset('images/comodossl.png')}}" alt="footer-logo"></div>
						</div>
					</div>
					<div class="footer__company">
						<img src="{{asset('images/footer1.png')}}"/>
						<img src="{{asset('images/footer2.png')}}"/>
						<img src="{{asset('images/footer3.png')}}"/>
					</div>
				</div>
				{% endif %}
			{% endblock %}

			{% block javascripts %}
			{% if custom_css == "application"%}
				<script type="text/javascript">
					document.getElementById('orders_dateTravel').type = 'date';
				</script>
			{% else %}
				 
			{% endif %}
			{% endblock %}
		</div>
	</body>
</html>
